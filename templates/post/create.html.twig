{% extends 'base.html.twig' %}

{% block title %}Create Post{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-lg-4 col-md-6 col-sm-12 border py-5">
            <div class="text-center">
                <h1>Create post</h1>
            </div>
            <div class="col-12">
                {{ form_start(postForm) }}
                {{ form_label(postForm.source) }}
                {{ form_widget(postForm.source, { 
                    "attr": {"class": "form-control my-2", "value" :"https://zupimages.net/up/20/19/dq2l.png"}
                }) }}
                {{ form_label(postForm.legend) }}
                {{ form_widget(postForm.legend, { "attr": {"class": "form-control my-2"} }) }}
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-sm my-4">Post</button>
                </div>
                {{ form_end(postForm) }}
            </div>
        </div>
        <div class="col-4"></div>
    </div>
</div>
{% endblock %}