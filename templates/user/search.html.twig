{% extends 'base.html.twig' %}

{% block title %}Result search{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-2 col-md-12 col-sm-12"></div>
        <div class="col-lg-8 col-md-12 col-sm-12 border py-5">
            <div class="col-12">
                {% for user in following %}
                    {% if user.id == current_user.id %}

                    {% else %}
                    <div class="row card-post-title border d-flex align-items-center py-2 my-1 bg-white">
                        <div class="col-8">
                            <a href="/profile/{{user.id}}">
                                <img src="{{ asset('assets/img/avatar_jenny.jpg')}}" width="40px" height="40px"
                                    style="border-radius: 60%;" class="mx-3"> | @{{user.username}}</a>
                        </div>
                        <div class="col-4">
                            <a href="/unfollow/{{user.id}}" class="btn btn-insta btn-sm">
                                Unfollow
                            </a>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                {% for user in notFollowing %}
                    {% if user.id == current_user.id %}

                    {% else %}
                    <div class="row card-post-title border d-flex align-items-center py-2 my-1 bg-white">
                        <div class="col-8">
                            <a href="/profile/{{user.id}}">
                                <img src="{{ asset('assets/img/avatar_jenny.jpg')}}" width="40px" height="40px"
                                    style="border-radius: 60%;" class="mx-3"> | @{{user.username}}</a>
                        </div>
                        <div class="col-4">
                            <a href="/follow/{{user.id}}" class="btn btn-insta btn-sm">
                                Follow
                            </a>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-12 col-sm-12"></div>
</div>
</div>
{% endblock %}